{
  "compilerOptions": {
    "target": "es2016",     
    "module": "commonjs", 
    "baseUrl": ".", 
    "paths": {
      "src/*": [
        "src/*"
      ],
      "config/*": [
        "src/config/*"
      ],
      "database/*": [
        "src/database/*"
      ],
      "route/*": [
        "src/route/*"
      ],
      "controller/*": [
        "src/controller/*"
      ]
    }, 
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true 
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}